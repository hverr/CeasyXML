<?xml version="1.0" encoding="UTF-8" ?>

<document>
    <layout name="library" class="TLibrary">
        <!-- library: elements -->
        <element name="name">
            <unique />
            <required />
            <content type="string">
                <getter>name</getter>
                <setter>setName:</setter>
            </content>
        </element>
        
        <element name="content">
            <unique />
            <content type="string">
                <getter>content</getter>
                <setter>setContent:</setter>
            </content>
        </element>
        
        <element name="entry">
            <!-- entry: content -->
            <content type="custom">
                <getter>entries</getter>
                <setter>setEntries:</setter>
                <class>TEntry</class>
            </content>
            
            <!-- entry: attributes -->
            <attribute name="type">
                <required />
                <content type="string">
                    <getter>type</getter>
                    <setter>setType:</setter>
                </content>
            </attribute><!-- type -->
            
            <!-- entry: elements -->
            <element name="title">
                <required />
                <unique />
                <content type="string">
                    <getter>title</getter>
                    <setter>setTitle:</setter>
                </content>
            </element><!-- title -->
            
            <element name="creator">
                <required />
                <unique />
                <empty />
                <content type="custom">
                    <getter>creator</getter>
                    <setter>setCreator:</setter>
                    <class>TCreator</class>
                </content>
                
                <attribute name="name">
                    <required />
                    <content type="string">
                        <getter>name</getter>
                        <setter>setName:</setter>
                    </content>
                </attribute>
            </element><!-- creator -->
            
            <element name="year">
                <required />
                <unique />
                <content type="number">
                    <getter>year</getter>
                    <setter>setYear:</setter>
                </content>
            </element><!-- year -->
            
        </element><!-- entry -->
    </layout><!-- library -->
</document>

